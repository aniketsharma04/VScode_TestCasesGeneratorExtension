{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/VScode_TestCasesGeneratorExtension"
            ],
            "outFiles": [
                "${workspaceFolder}/VScode_TestCasesGeneratorExtension/dist/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/VScode_TestCasesGeneratorExtension",
                "--extensionTestsPath=${workspaceFolder}/VScode_TestCasesGeneratorExtension/out/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/VScode_TestCasesGeneratorExtension/out/test/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}